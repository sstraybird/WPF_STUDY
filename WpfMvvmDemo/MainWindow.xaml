<Window x:Class="WpfMvvmDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMvvmDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <TextBlock Text="Initial Implementation: Code-Behind (The 'Bad' Way)" FontWeight="Bold" Margin="0,0,0,20" FontSize="16"/>

        <!-- Name Field -->
        <TextBlock Text="Name:"/>
        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10" Padding="5"/>

        <!-- Age Field -->
        <TextBlock Text="Age:"/>
        <TextBox Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10" Padding="5"/>

        <!-- Email Field -->
        <TextBlock Text="Email:"/>
        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10" Padding="5"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Update ViewModel (Code-Behind)" Width="200" Click="btnLoad_Click" Margin="0,0,10,0"/>
            <Button Content="Read ViewModel (Code-Behind)" Width="200" Click="btnSave_Click"/>
        </StackPanel>
        
        <TextBlock x:Name="lblStatus" Foreground="Gray" Margin="0,20,0,0" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
