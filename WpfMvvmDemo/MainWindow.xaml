<Window x:Class="WpfMvvmDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMvvmDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <TextBlock Text="Initial Implementation: Code-Behind (The 'Bad' Way)" FontWeight="Bold" Margin="0,0,0,20" FontSize="16"/>

        <!-- Name Field -->
        <TextBlock Text="Name:"/>
        <TextBox x:Name="txtName" Margin="0,5,0,10" Padding="5"/>

        <!-- Age Field -->
        <TextBlock Text="Age:"/>
        <TextBox x:Name="txtAge" Margin="0,5,0,10" Padding="5"/>

        <!-- Email Field -->
        <TextBlock Text="Email:"/>
        <TextBox x:Name="txtEmail" Margin="0,5,0,10" Padding="5"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnLoad" Content="Load Data (Model -> View)" Width="160" Click="btnLoad_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnSave" Content="Save Data (View -> Model)" Width="160" Click="btnSave_Click"/>
        </StackPanel>
        
        <TextBlock x:Name="lblStatus" Foreground="Gray" Margin="0,20,0,0" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
