<Window x:Class="WpfDataBindingDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDataBindingDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <!-- 1. 元素绑定 (Element Binding) -->
        <!-- 滑块 (Source) -->
        <TextBlock Text="1. 改变字体大小 (Element -> Element)" FontWeight="Bold" Margin="0,0,0,10"/>
        <Slider Name="SizeSlider" Minimum="10" Maximum="50" Value="20"/>

        <!-- 文本 (Target) -->
        <!-- Binding ElementName=SizeSlider: 指定源是上面的滑块 -->
        <!-- Path=Value: 指定源的属性是 Value -->
        <TextBlock Text="拖动滑块改变我的大小" 
                   FontSize="{Binding ElementName=SizeSlider, Path=Value}" 
                   Margin="0,20"
                   HorizontalAlignment="Center"/>

        <Separator Margin="0,20"/>

        <!-- 2. 双向/即时更新 -->
        <TextBlock Text="2. 输入同步 (Text -> Text)" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <!-- 输入框 (Source) -->
        <TextBox Name="InputBox" Text="Hello WPF" Padding="5"/>

        <!-- 显示框 (Target) -->
        <!-- UpdateSourceTrigger=PropertyChanged: 主要是为了演示如果它是源，别人绑定它也能即时更新 -->
        <TextBlock Text="{Binding ElementName=InputBox, Path=Text}" 
                   FontSize="16" Foreground="Blue" Margin="0,10"/>
                   
    </StackPanel>
</Window>
